rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // SECURE (recommended): require auth and scope by uid
    // Enable Firebase Authentication (e.g., Anonymous) so request.auth.uid is available
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // DEV-ONLY (unsafe): uncomment to allow open access for quick testing
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}

